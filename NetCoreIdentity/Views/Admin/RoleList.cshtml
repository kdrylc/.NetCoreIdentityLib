@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>RoleList</h1>

<table class="table table-active">
    <a href="/Admin/RoleCreate">New Role</a>
    <thead>
        <tr>
            <th>Id</th>
            <th>Role Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-primary" href="/Admin/RoleEdit/@item.Id">Edit</a>
                </td>

            </tr>
        }
    </tbody>
</table>
